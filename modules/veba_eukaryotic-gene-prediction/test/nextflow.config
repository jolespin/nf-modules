// Nextflow configuration file

profiles {
    docker {
        docker.enabled = true
        docker.runOptions = '-u $(id -u):$(id -g)'

        process {

            // Resource settings
            withLabel: process_medium {
                cpus = 12
                memory = '96 GB'
                time = '2h'
            }
        }
    }
}

// Default profile
params {
    fasta = "test.fasta"
    db = "VEBA-DB_v9/Classify/MicroEuk/MicroEuk50"
}