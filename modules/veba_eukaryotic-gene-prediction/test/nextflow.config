// Nextflow configuration file

profiles {
    docker {
        docker.enabled = true
        docker.runOptions = '-u $(id -u):$(id -g)'

        process {

            // Resource settings
            withLabel: process_medium {
                cpus = 4
                memory = '20 GB'
                time = '4h'
            }
        }
    }
}

// Default profile
params {
    // fasta = "combined.fasta.gz"
    fasta = "minimal.fasta.gz"
    db = "/mnt/efs/databases/veba/VEBA-DB_v9/Classify/MicroEuk/MicroEuk100.eukaryota_odb10"
    contigs_to_genomes = "contigs_to_genomes.tsv"
    tiara_probabilities = "tiara_results.tsv"
}