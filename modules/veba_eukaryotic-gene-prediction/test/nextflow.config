// Nextflow configuration file

profiles {
    docker {
        docker.enabled = true
        docker.runOptions = '-u $(id -u):$(id -g)'

        process {

            // Resource settings
            withLabel: process_medium {
                cpus = 4
                memory = '20 GB'
                time = '4h'
            }
        }
    }
}

// Default profile
params {
    fasta = "test.fasta"
    db = "VEBA-DB_v9/Classify/MicroEuk/MicroEuk100.eukaryota_odb10"
    contigs_to_genomes = "contigs_to_genomes.tsv"
}